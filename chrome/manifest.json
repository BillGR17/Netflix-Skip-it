{
  "manifest_version": 3,
  "name": "Netflix Skip it!",
  "version": "1.6.0",
  "description": "Skips Intros & Disables the interrupter",
  "icons": {
    "48": "icon/nsi.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "action": {
    "default_icon": "icon/nsi.png",
    "default_title": "Netflix Skip it! Settings",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*.netflix.com/*"],
    "js": ["nsi.js"]
  }]
}
